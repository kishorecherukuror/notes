<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.text %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <% if note.versions.count > 1 %>
          <td><%= link_to 'Rollback', rollback_note_path(note) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
